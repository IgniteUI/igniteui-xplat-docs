{
    "metadata": [
        {
            "src": [
                {
                    "files": ["src/**.csproj"],
                    "exclude": ["**/obj/**", "**/bin/**", "_site/**"]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "components/**.md",
                    "components/**/toc.yml",
					"components/themes/**.md",
                    "toc.yml",
                    "*.md"
                ],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "resource": [
            {
                "files": ["images/**"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "overwrite": [
            {
                "files": ["apidoc/**.md"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": ["global.json", "../../../dist/igniteui-docfx-template/template/bundling.global.json"],
        "fileMetadataFiles": [],
        "template": ["../../../dist/igniteui-docfx-template/template"],
        "postProcessors": ["SetEnvironmentVariables"],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": true,
        "disableGitFeatures": true
    }
}
