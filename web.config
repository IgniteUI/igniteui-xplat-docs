<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <staticContent>
            <remove fileExtension=".json" />
            <remove fileExtension=".woff" />
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".json" mimeType="application/json;charset=UTF-8;" />
            <mimeMap fileExtension="woff" mimeType="application/font-woff" />
            <mimeMap fileExtension="woff2" mimeType="application/font-woff" />
        </staticContent>
        <httpProtocol>
            <customHeaders>
                <add name="X-XSS-Protection" value="0" />
            </customHeaders>
        </httpProtocol>

         <rewrite>
            <rules>
                <clear />
				<!-- Angular -->
					  <rule name="Redirect for Ignite UI Angular category-chart" enabled="true" stopProcessing="true">
						<match url="^(products\/ignite-ui-angular\/angular\/components)\/category-chart.html$" />
						<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
						<action type="Redirect" url="{R:1}/charts/chart-overview.html" redirectType="Permanent" />
					  </rule>

				<!-- Blazor -->
					  <rule name="Redirect for Ignite UI Blazor category-chart" enabled="true" stopProcessing="true">
						<match url="^(products\/ignite-ui-blazor\/blazor\/components)\/category-chart.html$" />
						<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
						<action type="Redirect" url="{R:1}/charts/chart-overview.html" redirectType="Permanent" />
					  </rule>
					  
				<!-- React -->
					  <rule name="Redirect for Ignite UI React category-chart" enabled="true" stopProcessing="true">
						<match url="^(products\/ignite-ui-react\/react\/components)\/category-chart.html$" />
						<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
						<action type="Redirect" url="{R:1}/charts/chart-overview.html" redirectType="Permanent" />
					  </rule>
			
				<!-- WebComponents -->
				
					  <rule name="Redirect for Ignite UI WC category-chart" enabled="true" stopProcessing="true">
						<match url="^(products\/ignite-ui-web-components\/web-components\/components)\/category-chart.html$" />
						<conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
						<action type="Redirect" url="{R:1}/charts/chart-overview.html" redirectType="Permanent" />
					  </rule>
               
            </rules>
			
        </rewrite>
    </system.webServer>
</configuration>
