<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <staticContent>
            <remove fileExtension=".json" />
            <remove fileExtension=".woff" />
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".json" mimeType="application/json;charset=UTF-8;" />
            <mimeMap fileExtension="woff" mimeType="application/font-woff" />
            <mimeMap fileExtension="woff2" mimeType="application/font-woff" />
        </staticContent>
        <httpProtocol>
            <customHeaders>
                <add name="X-XSS-Protection" value="0" />
            </customHeaders>
        </httpProtocol>
         <rewrite>
            <rules>
                <clear />
  <!-- NOTE: if this file has changed then you need to do the following:
  1. commit changes to web.config file
  2. create a PR with a copy of all auto-generated rules and paste them in UrlRewriting.config file:
  https://infragistics.visualstudio.com/DefaultCollection/IS/_git/Web?path=%2FUmbraco%2FU7.3%2FInfragistics.Web.Umbraco.Extensions%2Fconfig%2FUrlRewriting.config
  3. create a PR with a copy of Angular/XPLAT auto-generated rules and paste them in web.config file:
  https://github.com/IgniteUI/igniteui-docfx/blob/vNext/en/web.config
  -->

  <!-- ======================================================================================= -->
  <!-- WARNING: do not manually change the following rules because they are generated from:            -->
  <!-- https://github.com/IgniteUI/igniteui-xplat-docs/blob/vnext/src/ext/RedirectManager.ts   -->
  <!-- by running "npm run generateRedirects" command which update "the web.config" file in:   -->
  <!-- https://github.com/IgniteUI/igniteui-xplat-docs/blob/vnext/web.config                   -->
  <!-- ======================================================================================= -->

<!-- {AutoInsertRules} -->



  <!-- NOTE the following rules are not auto-generated: -->

  <!-- rules for removing .html in blazor docs -->
  <rule name="Redirect - remove .html for blazor product" enabled="true" stopProcessing="true">
      <match url="^((products\/ignite-ui-blazor\/blazor)(\/)?(.*)).html$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false" >
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" negate="true" />
      </conditions>
      <action type="Redirect" url="{R:1}" redirectType="Permanent" />
  </rule>
  <rule name="Rewrite for Ignite UI blazor - assets" enabled="true">
      <match url="^(products\/ignite-ui-blazor\/blazor)(\/)?(.*)$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false">
          <add input="{URL}" pattern="^(.*)\/assets(.*)$" />
          <add input="{URL}" pattern="^(.*)\/bundles(.*)$" />
          <add input="{URL}" pattern="^(.*)\/i18n(.*)$" />
          <add input="{URL}" pattern="^(.*)\/images(.*)$" />
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" />
          <add input="{URL}" pattern="^(.*)\.md$" />
          <add input="{URL}" pattern="^(.*)\.xml$" />
          <add input="{URL}" pattern="^(.*)\.json$" />
      </conditions>
      <action type="Rewrite" url="/blazorsite/{R:3}" logRewrittenUrl="true" />
  </rule>

  <!-- rules for removing .html in react docs -->
  <rule name="Redirect - remove .html for react product" enabled="true" stopProcessing="true">
      <match url="^((products\/ignite-ui-react\/react)(\/)?(.*)).html$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false" >
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" negate="true" />
      </conditions>
      <action type="Redirect" url="{R:1}" redirectType="Permanent" />
  </rule>
  <rule name="Rewrite for Ignite UI react - assets" enabled="true">
      <match url="^(products\/ignite-ui-react\/react)(\/)?(.*)$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false">
          <add input="{URL}" pattern="^(.*)\/assets(.*)$" />
          <add input="{URL}" pattern="^(.*)\/bundles(.*)$" />
          <add input="{URL}" pattern="^(.*)\/i18n(.*)$" />
          <add input="{URL}" pattern="^(.*)\/images(.*)$" />
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" />
          <add input="{URL}" pattern="^(.*)\.md$" />
          <add input="{URL}" pattern="^(.*)\.xml$" />
          <add input="{URL}" pattern="^(.*)\.json$" />
      </conditions>
      <action type="Rewrite" url="/blazorsite/{R:3}" logRewrittenUrl="true" />
  </rule>

  <!-- rules for removing .html in web-components docs -->
  <rule name="Redirect - remove .html for web-components product" enabled="true" stopProcessing="true">
      <match url="^((products\/ignite-ui-web-components\/web-components)(\/)?(.*)).html$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false" >
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" negate="true" />
      </conditions>
      <action type="Redirect" url="{R:1}" redirectType="Permanent" />
  </rule>
  <rule name="Rewrite for Ignite UI web-components - assets" enabled="true">
      <match url="^(products\/ignite-ui-web-components\/web-components)(\/)?(.*)$" />
      <conditions logicalGrouping="MatchAny" trackAllCaptures="false">
          <add input="{URL}" pattern="^(.*)\/assets(.*)$" />
          <add input="{URL}" pattern="^(.*)\/bundles(.*)$" />
          <add input="{URL}" pattern="^(.*)\/i18n(.*)$" />
          <add input="{URL}" pattern="^(.*)\/images(.*)$" />
          <add input="{URL}" pattern="^(.*)\/toc(.*)$" />
          <add input="{URL}" pattern="^(.*)\.md$" />
          <add input="{URL}" pattern="^(.*)\.xml$" />
          <add input="{URL}" pattern="^(.*)\.json$" />
      </conditions>
      <action type="Rewrite" url="/blazorsite/{R:3}" logRewrittenUrl="true" />
  </rule>

  <!-- these rules do not work for Blazor/React/WC -->
